{
    "name": "quartzy/courier",
    "description": "A transactional email sending library using the php-email domain",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Chris Muthig",
            "email": "camuthig@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/log": "^1.0",
        "quartzy/php-email": "^0.5.1|^0.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "suggest": {
        "quartzy/courier-sparkpost": "To deliver emails using Sparkpost",
        "camuthig/courier-sendgrid": "To deliver emails using SendGrid",
        "camuthig/courier-postmark": "To deliver emails using Postmark"
    },
    "autoload": {
        "psr-4": {
            "Courier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Courier\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
