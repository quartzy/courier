{
    "name": "quartzy/courier",
    "description": "A transactional email sending library using the php-email domain",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Chris Muthig",
            "email": "camuthig@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/log": "^1.0",
        "quartzy/php-email": "^0.5.1"
    },
    "require-dev": {
        "ext-imap": "*",
        "sendgrid/sendgrid": "^5.1",
        "phpunit/phpunit": "^7.0",
        "guzzlehttp/guzzle": "^6.3",
        "php-http/guzzle6-adapter": "^1.1",
        "sparkpost/sparkpost": "^2.1",
        "mockery/mockery": "^0.9.8",
        "wildbit/postmark-php": "^2.3",
        "vlucas/phpdotenv": "^2.4",
        "zbateson/mail-mime-parser": "^0.4.8"
    },
    "suggest": {
        "quartzy/courier-sparkpost": "To deliver emails using Sparkpost",
        "sendgrid/sendgrid": "To use the SendGridCourier",
        "camuthig/courier-postmark": "To deliver emails using Postmark"
    },
    "autoload": {
        "psr-4": {
            "Courier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Courier\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --exclude=large",
        "test-integrations": "phpunit"
    }
}
